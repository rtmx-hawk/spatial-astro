---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import { TEAM } from '../data/constants';

const studioImage = "/assets/jason-briscoe-UV81E0oXXWQ-unsplash.jpg";
---

<Layout title="Studio - Spatial Interior Design">
  <div class="flex flex-col min-h-screen bg-soft-cream">
    <Navbar />

    <main class="flex-grow pt-32 pb-20">

      <!-- Studio Intro -->
      <section class="px-6 md:px-12 max-w-7xl mx-auto mb-32">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-16 items-center">
          <div>
            <span class="text-golden-tan text-xs tracking-[0.3em] uppercase block mb-4">The Studio</span>
            <h1 class="font-serif text-5xl md:text-6xl text-earthy-green leading-tight mb-8">
              Rooted in nature, <br/> refined by design.
            </h1>
            <div class="space-y-6 text-earthy-green font-light leading-relaxed text-lg">
              <p>
                Spatial Interior Design was born from a desire to bridge the gap between rugged mountain landscapes
                and refined, luxurious living. Based in Upstate South Carolina, we serve clients who seek
                homes that are not just seen, but felt.
              </p>
              <p>
                Our approach honors natural materials—stone, raw timber, linen, and wool—while employing
                modern architectural lines to create spaces of quiet power and rest.
              </p>
            </div>
          </div>
          <div class="relative">
            <div class="absolute -top-6 -left-6 w-full h-full border border-golden-tan z-0"></div>
            <img
              src={studioImage}
              alt="Studio Details"
              class="w-full relative z-10 grayscale hover:grayscale-0 transition-all duration-1000"
            />
          </div>
        </div>
      </section>

      <!-- Typography Showcase / Editorial Section -->
      <section class="bg-warm-sand/20 py-32 overflow-hidden border-y border-cool-grey/30">
        <div class="max-w-7xl mx-auto px-6 md:px-12 relative">
          <div class="absolute top-0 right-0 text-soft-cream text-[200px] md:text-[400px] font-serif opacity-30 leading-none select-none -translate-y-1/4 pointer-events-none">
            &
          </div>

          <div class="grid grid-cols-1 md:grid-cols-12 gap-8 items-center">
            <div class="md:col-span-5 flex flex-col justify-center">
              <h2 class="font-serif text-6xl md:text-8xl text-earthy-green leading-[0.9] mb-6">
                Timeless <br/> Form
              </h2>
            </div>
            <div class="md:col-span-7 border-l border-earthy-green/20 pl-8 md:pl-16 flex flex-col justify-center">
              <p class="font-serif text-2xl md:text-3xl italic text-earthy-green mb-10 leading-tight">
                "Luxury is not about abundance, but about the absence of vulgarity and the presence of meaning."
              </p>
              <div class="flex gap-16">
                <div>
                  <span class="block font-serif text-5xl text-golden-tan">20+</span>
                  <span class="text-xs uppercase tracking-widest text-earthy-green mt-2 block">Years Experience</span>
                </div>
                <div>
                  <span class="block font-serif text-5xl text-golden-tan">50+</span>
                  <span class="text-xs uppercase tracking-widest text-earthy-green mt-2 block">Custom Builds</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Team -->
      <section class="px-6 md:px-12 max-w-7xl mx-auto py-32">
        <div class="text-center mb-20">
          <h2 class="font-serif text-4xl text-earthy-green">The Team</h2>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-16 max-w-4xl mx-auto">
          {TEAM.map((member) => (
            <div class="text-center group cursor-default">
              <div class="mb-8 overflow-hidden rounded-full w-48 h-48 md:w-64 md:h-64 mx-auto relative">
                <img
                  src={member.image}
                  alt={member.name}
                  class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110 grayscale group-hover:grayscale-0"
                />
              </div>
              <h3 class="font-serif text-3xl text-earthy-green mb-1">{member.name}</h3>
              <p class="text-xs tracking-widest uppercase text-golden-tan mb-6">{member.role}</p>
              <p class="font-light text-sm text-cool-grey max-w-xs mx-auto leading-relaxed">{member.bio}</p>
            </div>
          ))}
        </div>
      </section>

    </main>

    <Footer />
  </div>
</Layout>
