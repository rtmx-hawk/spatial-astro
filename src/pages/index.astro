---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import Hero from '../components/Hero.astro';
import { PROJECTS, CALLOUT_IMAGE } from '../data/constants';

const highlights = PROJECTS.slice(0, 3);
---

<Layout title="Spatial Interior Design">
  <div class="flex flex-col min-h-screen bg-soft-cream">
    <Navbar />

    <main class="flex-grow">
      <Hero />

      <!-- Philosophy Section -->
      <section class="py-24 md:py-40 px-6 md:px-12 max-w-5xl mx-auto text-center">
        <span class="text-golden-tan text-xs tracking-[0.3em] uppercase block mb-6">The Philosophy</span>
        <h2 class="font-serif text-4xl md:text-6xl text-earthy-green leading-tight mb-10">
          Architecture of <span class="italic font-light">Calm</span>.
        </h2>
        <p class="text-earthy-green text-lg md:text-xl font-light leading-relaxed max-w-3xl mx-auto text-pretty">
          We believe a home should be a dialogue with its environment.
          Our designs translate the textures of the Blue Ridge and the serenity of the lakes
          into interiors that feel both timeless and distinctly modern.
        </p>
      </section>

      <!-- Selected Works -->
      <section class="py-20 px-6 md:px-12 bg-white">
        <div class="max-w-7xl mx-auto">
          <div class="flex flex-col md:flex-row justify-between items-end mb-16 gap-6">
            <h3 class="font-serif text-3xl md:text-4xl text-earthy-green">Selected Works</h3>
            <a
              href="/gallery"
              class="text-sm tracking-widest uppercase border-b border-earthy-green pb-1 hover:text-golden-tan hover:border-golden-tan transition-colors"
            >
              View Full Portfolio
            </a>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-3 gap-8 md:gap-12">
            {highlights.map((project, index) => (
              <a
                href="/gallery"
                class={`group cursor-pointer ${index === 1 ? 'md:-translate-y-12' : ''}`}
              >
                <div class="overflow-hidden mb-6 relative aspect-[3/4]">
                  <img
                    src={project.image}
                    alt={project.title}
                    class="w-full h-full object-cover transition-transform duration-1000 ease-out group-hover:scale-105 will-change-transform"
                    loading="lazy"
                    decoding="async"
                  />
                  <div class="absolute inset-0 bg-earthy-green/0 group-hover:bg-earthy-green/10 transition-colors duration-500"></div>
                </div>
                <h4 class="font-serif text-2xl text-earthy-green mb-2 group-hover:text-golden-tan transition-colors">{project.title}</h4>
                <p class="text-xs tracking-widest uppercase text-cool-grey">{project.location}</p>
              </a>
            ))}
          </div>
        </div>
      </section>

      <!-- Large visual break -->
      <section class="h-[70vh] w-full relative overflow-hidden">
        <img
          src={CALLOUT_IMAGE}
          class="w-full h-full object-cover"
          alt="Mountain Atmosphere"
        />
        <div class="absolute inset-0 bg-earthy-green/30 flex items-center justify-center">
          <div class="bg-soft-cream/90 p-12 md:p-24 max-w-3xl text-center backdrop-blur-md border border-soft-cream/50 shadow-2xl">
            <h2 class="font-serif text-4xl md:text-5xl text-earthy-green mb-8">Every space tells a story. Let's write yours.</h2>
            <a
              href="/contact"
              class="inline-block px-12 py-4 bg-earthy-green text-soft-cream hover:bg-[#5e634d] transition-colors uppercase tracking-widest text-xs md:text-sm"
            >
              Inquire
            </a>
          </div>
        </div>
      </section>
    </main>

    <Footer />
  </div>
</Layout>
